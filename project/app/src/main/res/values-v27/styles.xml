<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryLight</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarDividerColor">@color/nav_bar_divider</item>
    </style>


    <!--BottomSheetDialogFragment-->
    <style name="ThemeOverlay.BottomSheetDialog" parent="ThemeOverlay.BaseBottomSheetDialog" />
    <style name="ThemeOverlay.BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>


</resources>