<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Alarm Switch theme overlay-->
    <style name="ThemeOverlay.AlarmSwitchCompat" parent="">
        <item name="colorControlActivated">@color/switch_activated</item>
        <item name="colorSwitchThumbNormal">@color/switch_normal_button</item>
        <item name="android:colorForeground">@color/switch_normal_track</item>
    </style>

    <!--Alarm Buttons with images-->
    <style name="alarm_img_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--OnBoardFragment-->
    <style name="ThemeOverlay.OnBoardFragment" parent="@style/Theme.AppCompat.Leanback.Onboarding">
        <item name="onboardingTitleStyle">@style/onBoardTitle</item>
        <item name="onboardingDescriptionStyle">@style/onBoardDescription</item>
        <item name="onboardingPageIndicatorStyle">@style/onBoardPageIndication</item>
        <item name="onboardingStartButtonStyle">@style/onBoardGetStarted</item>
    </style>

    <style name="onBoardDescription" parent="@style/Widget.Leanback.OnboardingDescriptionStyle">
        <item name="android:textColor">@color/colorSurface</item>
    </style>
    <style name="onBoardTitle" parent="@style/Widget.Leanback.OnboardingTitleStyle">
        <item name="android:textColor">@color/colorSurfaceDark</item>
    </style>
    <style name="onBoardPageIndication" parent="@style/Widget.Leanback.OnboardingPageIndicatorStyle">
        <item name="dotBgColor">@color/colorSurfaceDark</item>
        <item name="arrowColor">@color/colorSurfaceDark</item>
    </style>

    <style name="onBoardGetStarted" parent="@style/Widget.Leanback.OnboardingStartButtonStyle">
        <item name="android:textColor">@color/colorSurfaceDark</item>
    </style>


    <!--onBoardFragment  &  Selection Buttons-->
    <style name="ThemeOverlay.MaterialButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorSurfaceDark</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>