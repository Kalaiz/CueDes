<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Alarm Switch theme overlay-->
    <style name="ThemeOverlay.AlarmSwitchCompat" parent="">
        <item name="colorControlActivated">@color/switch_activated</item>
        <item name="colorSwitchThumbNormal">@color/switch_normal_button</item>
        <item name="android:colorForeground">@color/switch_normal_track</item>
    </style>



</resources>